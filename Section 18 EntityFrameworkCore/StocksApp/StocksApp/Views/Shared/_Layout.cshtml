<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="header-content">
            <h1>
                <i class="fa-solid fa-money-bill-trend-up"></i>
                Stocks
            </h1>
            <div class="input-content">
                <input type="text" placeholder="Search Stocks" class="search-stocks" />
                <i class="fa-solid fa-gear"></i>
                <button type="button" class="blue-back">Login</button>
            </div>
        </div>
        <div class="hyperlinks">
            <a asp-controller="Trade" asp-action="Index" id="trade">Trade</a>
            <a asp-controller="Trade" asp-action="Orders">Orders</a>
        </div>
        <div class="active">
            @if (ViewBag.Title == "Home")
            {
                <hr class="active-trade" />
            }
            @if (ViewBag.Title == "Orders")
            {
                <hr class="active-orders" />
            }
        </div>
        <div class="breadcrumb">
            <span>
                Stocks
                <i class="fa-solid fa-angle-right"></i>
                @ViewBag.BreadcrumbValue
            </span>
            @if (ViewBag.Title == "Orders")
            {
                <span class="download-as-pdf">
                    <a asp-controller="Trade" asp-action="OrdersPDF">Download as PDF</a>
                </span>
            }
        </div>
        <div class="page-content">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer" asp-fallback-test="window.jQuery" asp-fallback-src="~/Scripts/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required:false)
</body>
</html>